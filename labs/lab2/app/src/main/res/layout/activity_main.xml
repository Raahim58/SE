<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.listyView.MainActivity">

    <EditText
        android:id="@+id/city_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter city name"
        android:padding="12dp"
        android:inputType="textPersonName"
        android:autofillHints="cityName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

    <Button
        android:id="@+id/add_city_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ADD CITY"
        app:layout_constraintTop_toBottomOf="@id/city_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete_city_btn"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp" />

    <Button
        android:id="@+id/delete_city_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DELETE CITY"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/city_input"
        app:layout_constraintStart_toEndOf="@+id/add_city_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp" />

    <ListView
        android:id="@+id/city_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_city_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp">
    </ListView>
    <!-- stretch bottom of ListView to the bottom of the screen, left side of the ListView to the left side of the screen and likewise for the right side, a big box that fills rest of the screen from the button onwardds -->


